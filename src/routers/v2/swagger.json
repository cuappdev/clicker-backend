                    "properties": {
                      "date": {
                        "type": "string",
                        "example": "1555350950"
                      },
                      "polls": {
                        "type": "array",
                        "items": {
                          "$ref": "#/definitions/Poll"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/start/session/": {
