        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "onConnect": {
      "get": {
        "tags": [
          "Socket: to server"
        ],
        "summary": "Socket connection",
        "description": "On socket connection, send `accessToken`"
      }
    },
    "server/poll/answer": {
      "get": {
        "tags": [
          "Socket: to server"
        ],
        "summary": "Answer a poll",
        "description": "User sends this to answer a multiple choice poll or submit a FR answer",
        "parameters": [
          {
            "name": "submittedAnswer",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/PollChoice"
            }
          }
        ]
      }
    },
    "server/poll/upvote": {
      "get": {
        "tags": [
          "Socket: to server"
        ],
        "summary": "Upvote a FR answer",
        "description": "User sends this to upvote an answer in free response",
        "parameters": [
          {
            "name": "upvotedAnswer",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/PollChoice"
            }
          }
        ]
      }
    },
    "server/poll/start": {
      "get": {
        "tags": [
          "Socket: to server"
        ],
        "summary": "Admin sends to start a poll",
        "description": "State should be “live”",
        "parameters": [
          {
            "name": "newPoll",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Socket - ClientPoll"
            }
          }
        ]
      }
    },
    "server/poll/end": {
      "get": {
        "tags": [
          "Socket: to server"
        ],
        "summary": "Admin sends to end current poll"
      }
    },
    "server/poll/results": {
      "get": {
        "tags": [
          "Socket: to server"
        ],
        "summary": "Admin sends to share poll results",
        "description": "State should be “shared”",
        "parameters": [
          {
            "name": "pollID",
            "in": "body",
            "type": "integer"
          }
        ]
      }
    },
    "server/poll/delete": {
      "get": {
        "tags": [
          "Socket: to server"
        ],
        "summary": "Admin sends to delete saved poll",
        "parameters": [
          {
            "name": "pollID",
            "in": "body",
            "type": "integer"
          }
        ]
      }
    },
    "server/poll/delete/live": {
      "get": {
        "tags": [
          "Socket: to server"
        ],
        "summary": "Admin sends to delete live poll"
      }
    },
    "user/poll/start": {
      "get": {
        "tags": [
          "Socket: to member"
        ],
        "summary": "User receives to display a poll",
        "description": "State should be “live”",
        "responses": [
          {
            "name": "currentPoll",
            "schema": {
              "$ref": "#/definitions/Socket - ClientPoll"
            }
          }
        ]
      }
    },
    "user/poll/fr/filter": {
      "get": {
        "tags": [
          "Socket: to member"
        ],
        "summary": "User receives when FR answer is registered, if doesn’t pass profanity filter then sends user answer and array of bad words found",
        "responses": [
          {
            "name": "response",
            "schema": {
              "$ref": "#/definitions/Socket - PollFilter"
            }
          }
        ]
      }
    },
    "user/poll/fr/live": {
      "get": {
        "tags": [
          "Socket: to member"
        ],
        "summary": "User receives an updated poll to reflect the current changes (only FR)",
        "responses": [
          {
            "name": "currentPoll",
            "schema": {
              "$ref": "#/definitions/Socket - ClientPoll"
            }
          }
        ]
      }
    },
    "user/poll/end": {
      "get": {
        "tags": [
          "Socket: to member"
        ],
        "summary": "User receives when poll has ended",
        "description": "State should be “end”",
        "responses": [
          {
            "name": "endedPoll",
            "schema": {
              "$ref": "#/definitions/Socket - ClientPoll"
            }
          }
        ]
      }
    },
    "user/poll/delete": {
      "get": {
        "tags": [
          "Socket: to member"
        ],
        "summary": "User receives the pollID to delete",
        "parameters": [
          {
            "name": "pollID",
            "in": "body",
            "type": "integer"
          }
        ]
      }
    },
    "user/poll/delete/live": {
      "get": {
        "tags": [
          "Socket: to member"
        ],
        "summary": "User receives when admin deletes the current live poll"
      }
    },
    "user/poll/results": {
      "get": {
        "tags": [
          "Socket: to member"
        ],
        "summary": "User receives when if admin decides to share results",
        "description": "State should be “shared”",
        "responses": [
          {
            "name": "sharedPoll",
            "schema": {
              "$ref": "#/definitions/Socket - ClientPoll"
            }
          }
        ]
      }
    },
    "admin/poll/start": {
      "get": {
        "tags": [
          "Socket: to admin"
        ],
        "summary": "Admin receives current poll upon entry (if there is one)",
        "responses": [
          {
            "name": "currentPoll",
            "schema": {
              "$ref": "#/definitions/Socket - ClientPoll"
            }
          }
        ]
      }
    },
    "admin/poll/updates": {
      "get": {
        "tags": [
          "Socket: to admin"
        ],
        "summary": "Admin receives an updated poll to reflect the current changes",
        "responses": [
          {
            "name": "currentPoll",
            "schema": {
              "$ref": "#/definitions/Socket - ClientPoll"
            }
          }
        ]
      }
    },
    "admin/poll/ended": {
      "get": {
        "tags": [
          "Socket: to admin"
        ],
        "summary": "Admin receives when poll has ended",
        "description": "State should be “end”",
        "responses": [
          {
            "name": "endedPoll",
            "schema": {
              "$ref": "#/definitions/Socket - ClientPoll"
            }
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "Draft": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp (Unix time)",
          "example": "1555351053"
        },
        "options": {
          "type": "array",
          "description": "Poll options, empty if FR",
          "items": {
            "type": "string"
          }
        },
        "text": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "createdAt",
        "options",
        "text"
      ]
    },
    "Group": {
      "type": "object",
      "description": "By default, `isFilterActivated = true` `isLocationRestricted = false`",
      "properties": {
        "id": {
          "type": "integer"
        },
        "code": {
          "type": "string"
        },
        "isFilterActivated": {
          "description": "Indicate if profanity filter is on",
          "type": "boolean"
        },
        "isLive": {
          "type": "boolean"
        },
        "isLocationRestricted": {
          "type": "boolean"
        },
        "location": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "number",
              "format": "float",
              "nullable": true
            },
            "long": {
              "type": "number",
              "format": "float",
              "nullable": true
            }
          }
        },
        "name": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string",
          "description": "Timestamp (Unix time)",
          "example": "1555351053"
        }
      },
      "required": [
        "id",
        "code",
        "isFilterActivated",
        "isLive",
        "isLocationRestricted",
        "location",
        "name",
        "updatedAt"
      ]
    },
    "Poll": {
      "type": "object",
      "description": "NOTE: A poll in socket is saved to database when poll ends",
      "properties": {
        "id": {
          "type": "integer"
        },
        "answerChoices": {
          "type": "array",
          "description": "Answer choice results",
          "items": {
            "$ref": "#/definitions/PollResult"
          },
          "example": [
            {
              "letter": "A",
              "text": "MC example",
              "count": 5
            },
            {
              "text": "FR example",
              "count": 16
            }
          ]
        },
        "correctAnswer": {
          "type": "string",
          "description": "Letter of correct answer choice (MC only)",
          "example": "A"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp (Unix time)",
          "example": "1555350950"
        },
        "state": {
          "type": "string",
          "description": "Current state of the poll object",
          "enum": [
            "live",
            "ended",
            "shared"
          ]
        },
        "text": {
          "type": "string",
          "description": "Poll question",
          "example": "Which planet is a gas giant?"
        },
        "type": {
          "type": "string",
          "description": "Poll type",
          "enum": [
            "multipleChoice",
            "freeResponse"
          ],
          "example": "multipleChoice"
        },
        "updatedAt": {
          "type": "string",
          "description": "Timestamp (Unix time)",
          "example": "1555351053"
        },
        "userAnswers": {
          "type": "object",
          "description": "Mapping of googleID to the choice the user selected if MC, or the choices the user upvoted if FR",
          "properties": {
            "googleID(string)": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/PollChoice"
              },
              "example": {
                "googleID1": {
                  "letter": "A",
                  "text": "selected MC answer"
                },
                "googleID2": [
                  {
                    "text": "upvoted FR answer1"
                  },
                  {
                    "text": "upvoted FR answer2"
                  }
                ]
              }
            }
          }
        }
      },
      "required": [
        "id",
        "answerChoices",
        "state",
        "text",
        "type",
        "userAnswers"
      ]
    },
    "PollChoice": {
      "type": "object",
      "properties": {
        "letter": {
          "type": "string",
          "description": "Letter identifier of answer choice (MC only)",
          "example": "A"
        },
        "text": {
          "type": "string",
          "description": "Text of answer choice",
          "example": "Saturn"
        }
      },
      "required": [
        "text"
      ]
    },
    "PollResult": {
      "type": "object",
      "properties": {
        "count": {
          "type": "integer",
          "description": "Number of times choice was selected or upvoted<br/>`Null` when user is member & poll is MC & poll is not shared"
        },
        "letter": {
          "type": "string",
          "description": "Letter identifier of answer choice (MC only)",
          "example": "A"
        },
        "text": {
          "type": "string",
          "description": "Text of answer choice",
          "example": "Saturn"
        }
      },
      "required": [
        "text"
      ]
    },
    "Socket - ClientPoll": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp (Unix time)",
          "example": "1555351053"
        },
        "updatedAt": {
          "type": "string",
          "description": "Timestamp (Unix time)",
          "example": "1555351053"
        },
        "answerChoices": {
          "type": "array",
          "description": "All answers for the poll; count is null if user is `member` and MC poll is `live` or `ended`",
          "items": {
            "$ref": "#/definitions/PollResult"
          }
        },
        "correctAnswer": {
          "type": "string",
          "example": "A",
          "description": "Letter of correct answer choice (MC only)"
        },
        "state": {
          "type": "string",
          "description": "Current state of the poll object",
          "enum": [
            "live",
            "ended",
            "shared"
          ]
        },
        "text": {
          "type": "string",
          "description": "Poll question"
        },
        "type": {
          "type": "string",
          "description": "Poll type",
          "enum": [
            "multipleChoice",
            "freeResponse"
          ]
        },
        "userAnswers": {
          "type": "object",
          "description": "Mapping of googleID to user answers for MC and upvotes for FR",
          "properties": {
            "googleID(string)": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/PollChoice"
              },
              "example": {
                "googleID1": {
                  "letter": "A",
                  "text": "selected MC answer"
                },
                "googleID2": [
                  {
                    "text": "upvoted FR answer1"
                  },
                  {
                    "text": "upvoted FR answer2"
                  }
                ]
              }
            }
          }
        }
      },
      "required": [
        "answerChoices",
        "state",
        "text",
        "type",
        "userAnswers"
      ]
    },
    "Socket - PollFilter": {
      "type": "object",
      "description": "NOTE: `text` and `filter` fields passed in when `success=false`",
      "properties": {
        "success": {
          "type": "boolean"
        },
        "text": {
          "description": "Text of answer submitted",
          "type": "string"
        },
        "filter": {
          "description": "Words that are considered inappropriate",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "success"
      ]
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "netID": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "netID"
      ]
    },
    "UserSession": {
      "type": "object",
      "properties": {
        "accessToken": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        },
        "sessionExpiration": {
          "type": "string"
        },
        "isActive": {
          "type": "boolean"
        }
      },
      "required": [
        "accessToken",
        "refreshToken",
        "sessionExpiration",
        "isActive"
      ]
    }
  }
}