          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Information to start new group",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "code": {
                  "type": "string",
                  "description": "Group code"
                },
                "location": {
                  "type": "object",
                  "properties": {
                    "lat": {
                      "type": "number",
                      "format": "float",
                      "nullable": true
                    },
                    "long": {
                      "type": "number",
                      "format": "float",
                      "nullable": true
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "data": {
                  "$ref": "#/definitions/Group"
